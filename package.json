{
    "name": "rsup-progress",
    "description": "A simple (1Kb) progress bar with promises support",
    "version": "1.4.0",
    "repository": "https://github.com/skt-t1-byungi/rsup-progress.git",
    "author": "skt-t1-byungi <tiniwz@gmail.com>",
    "type": "module",
    "unpkg": "dist/index.umd.js",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "keywords": [
        "progress",
        "progressbar",
        "loader",
        "promise",
        "1kb"
    ],
    "files": [
        "dist"
    ],
    "license": "MIT",
    "scripts": {
        "dev": "parcel serve website/index.html --dist-dir public",
        "test": "echo skip",
        "build": "rm -rf dist && tsc",
        "umd": "rollup dist/index.js --file dist/index.umd.js --format umd --name RsupProgress",
        "website": "parcel build website/index.html --dist-dir public --public-url ./  --no-source-maps",
        "deploy": "rm -rf public && npm run website && gh-pages -d public",
        "prepublishOnly": "npm run test && npm run size && npm run umd",
        "size": "npm run build && package-size ./dist/index.js --no-cache"
    },
    "engines": {
        "node": ">= 6"
    },
    "devDependencies": {
        "@parcel/config-default": "^2.0.0-beta.3.1",
        "@parcel/transformer-sass": "2.0.0-beta.3.1",
        "@parcel/transformer-typescript-tsc": "^2.0.0-beta.3.1",
        "gh-pages": "^3.2.3",
        "include-media": "^1.4.10",
        "minireset.css": "^0.0.7",
        "package-size": "^2.3.0",
        "parcel": "^2.0.0-beta.3.1",
        "prettier": "^2.3.2",
        "rollup": "^2.52.3",
        "sass": "^1.35.1",
        "thejungle": "^3.0.0",
        "typescript": "^4.3.4"
    },
    "prettier": {
        "arrowParens": "avoid",
        "semi": false,
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
    }
}
